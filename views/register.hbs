{{!-- Register form --}}
<div id="signupbox" style="display:block; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    
    {{!-- Panel Heading--}}
    <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
        <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="/user/login">Sign In</a></div>
    </div>  

    {{!-- Panel Body --}}
    <div class="panel-body" >
      <form action="/user/register" method="post" class="form-horizontal" >
          
          {{!-- Warning messages--}}
          {{#if message}}
          <div class="alert alert-danger">
            <p>{{message}}</p>
          </div>
          {{/if}}
          
          {{!-- Email field --}}   
          <div class="form-group">
              <label for="email" class="col-md-3 control-label">Email</label>
              <div class="col-md-9">
                  <input type="text" class="form-control" name="email" placeholder="Email Address" required>
              </div>
          </div>

          {{!-- Password field --}}   
          <div class="form-group">
              <label for="password" class="col-md-3 control-label">Password</label>
              <div class="col-md-9">
                  <input type="password" class="form-control" name="password" placeholder="Password" required>
              </div>
          </div>

          {{!-- User Pokemons Hidden Field --}}    
          <input type="hidden" name="myPokemons">

          {{!-- User Boxes Hidden Field --}}    
          <input type="hidden" name="myBoxes">

          {{!-- Submit button --}}
          <div class="form-group">
              
              <div class="col-md-offset-3 col-md-9">
                  <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
                  <span style="margin-left:8px;">or</span>  
              </div>
          </div>
          
          {{!-- Social signup --}}   
          <div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">
            
            <div class="col-md-offset-3 col-md-9">

              {{!-- Facebook --}}
              <button id="btn-fbsignup" type="button" class="btn btn-primary"><i class="icon-facebook"></i> Â  Sign Up with Facebook</button>

            </div>
                  
          </div>
          
      </form>
    </div>
  </div> 
</div> 

{{!-- Javascript --}}
<script src="/javascripts/register.js"></script>